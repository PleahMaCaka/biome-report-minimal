{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"extends": "//",
	"files": {
		"includes": ["**", "!.svelte-kit"]
	},
	"overrides": [
		{
			"includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
